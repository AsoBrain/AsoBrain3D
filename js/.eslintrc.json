{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false
  },
  "plugins": [ ],
  "rules": {
    "indent": [ "off", "tab" ],
    "no-mixed-spaces-and-tabs": [ "off" ],
    "linebreak-style": [ "off", "unix" ],
    "quotes": [ "off", "single" ],
    "semi": [ "error", "always" ],
    "no-console": [ "off" ]
  }
}
