{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "NodeNext",
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "NodeNext",
    "types": [
      "node"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "lib",
    "*/__tests__/**",
  ]
}
